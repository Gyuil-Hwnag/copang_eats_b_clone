<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:padding="5dp">

    <ImageView
        android:id="@+id/img_new"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/img_category1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="centerCrop">
    </ImageView>

    <TextView
        android:id="@+id/txt_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_width="100dp"
        android:layout_height="15dp"
        app:layout_constraintTop_toBottomOf="@id/img_new"
        android:text="신규 맛집"
        android:textSize="12dp">
    </TextView>

    <ImageView
        android:layout_marginTop="2dp"
        android:id="@+id/stars"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_name"
        app:layout_constraintBottom_toBottomOf="@id/txt_delivery_status"
        android:src="@drawable/ic_stars_preview_rev_1">
    </ImageView>

    <TextView
        android:layout_marginLeft="3dp"
        android:id="@+id/txt_review_num"
        android:layout_marginTop="3dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/txt_name"
        app:layout_constraintBottom_toBottomOf="@id/txt_delivery_status"
        app:layout_constraintLeft_toRightOf="@id/stars"
        android:text="4.8"
        android:textSize="10dp">
    </TextView>

    <TextView
        android:layout_marginLeft="1dp"
        android:id="@+id/txt_review_count"
        android:layout_marginTop="3dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/txt_name"
        app:layout_constraintBottom_toBottomOf="@id/txt_delivery_status"
        app:layout_constraintLeft_toRightOf="@id/txt_review_num"
        android:text="(233)"
        android:textSize="10dp">
    </TextView>

    <TextView
        android:layout_marginLeft="3dp"
        android:id="@+id/and"
        android:layout_marginTop="3dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/txt_name"
        app:layout_constraintBottom_toBottomOf="@id/txt_delivery_status"
        app:layout_constraintLeft_toRightOf="@id/txt_review_count"
        android:text="·"
        android:textSize="10dp">
    </TextView>

    <TextView
        android:layout_marginLeft="3dp"
        android:id="@+id/txt_distance"
        android:layout_marginTop="3dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/txt_name"
        app:layout_constraintBottom_toBottomOf="@id/txt_delivery_status"
        app:layout_constraintLeft_toRightOf="@id/and"
        android:text="0.4Km"
        android:textSize="10dp">
    </TextView>

    <TextView
        android:id="@+id/txt_delivery_status"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="7dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="무료배달"
        android:textSize="10dp">
    </TextView>



</androidx.constraintlayout.widget.ConstraintLayout>