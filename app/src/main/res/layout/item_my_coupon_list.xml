<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:padding="20dp"
    android:background="@drawable/login_edit_shape">

    <TextView
        android:id="@+id/name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="13dp"
        android:text="쿠팡이츠 제일제면소 캐러샐 할인쿠폰">
    </TextView>

    <TextView
        android:id="@+id/price"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/register_login_blue"
        android:textStyle="bold"
        android:textSize="35dp"
        android:text="4,000원 할인">
    </TextView>

    <TextView
        android:id="@+id/constraint"
        app:layout_constraintTop_toBottomOf="@id/price"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/register_btn_gray"
        android:textSize="13dp"
        android:text="23,000원 이상">
    </TextView>
    <TextView
        android:id="@+id/shelf_life"
        app:layout_constraintTop_toBottomOf="@id/price"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/register_btn_gray"
        android:textSize="16dp"
        android:text="08/22까지">
    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>