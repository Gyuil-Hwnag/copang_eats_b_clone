<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:padding="10dp"
    android:background="@drawable/review_shape"
    android:layout_marginRight="10dp">

    <ImageView
        android:id="@+id/img_review"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/img_category1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scaleType="centerCrop">
    </ImageView>

    <TextView
        android:id="@+id/txt_review"
        app:layout_constraintLeft_toRightOf="@id/img_review"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="신규 맛집\ndsdssdsd"
        android:textSize="10dp"
        android:layout_marginLeft="10dp">
    </TextView>

    <RatingBar
        android:id="@id/review_average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="3"
        android:stepSize="1"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/img_review"
        android:theme="@style/RatingBar"/>



</androidx.constraintlayout.widget.ConstraintLayout>