<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <ImageView
        android:id="@+id/img_like"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/img_category1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scaleType="centerCrop">
    </ImageView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_main"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/img_like">
        <TextView
            android:id="@+id/txt_name"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="신규 맛집"
            android:textSize="17dp">
        </TextView>

        <ImageView
            android:id="@+id/chita_img"
            app:layout_constraintLeft_toRightOf="@id/txt_name"
            android:layout_width="85dp"
            android:layout_height="16dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/chita_preview_rev_1"
            android:scaleType="centerCrop">
        </ImageView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/delivery_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name_main"
        app:layout_constraintLeft_toRightOf="@id/img_like"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp">

        <ImageView
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/stars"
            android:layout_width="17dp"
            android:layout_height="17dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_stars_preview_rev_1">
        </ImageView>

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/txt_review_num"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/stars"
            android:text="4.8"
            android:textSize="15dp">
        </TextView>

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/txt_review_count"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/txt_review_num"
            android:text="(233)"
            android:textSize="15dp">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/delivery_main"
        app:layout_constraintLeft_toRightOf="@id/img_like"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/txt_distance"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="0.4Km"
            android:textSize="13dp">
        </TextView>

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/and"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/txt_distance"
            android:text="·"
            android:textSize="13dp">
        </TextView>

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/delivery_time"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/and"
            android:text="16~26분"
            android:textSize="13dp">
        </TextView>

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/and2"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/delivery_time"
            android:text="·"
            android:textSize="13dp">
        </TextView>

        <TextView
            android:id="@+id/txt_delivery_status"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/and2"
            android:text="무료배달"
            android:textSize="13dp">
        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>