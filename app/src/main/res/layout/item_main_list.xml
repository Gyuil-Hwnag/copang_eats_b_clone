<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="310dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/img_new"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:src="@drawable/img_category1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="centerCrop">
    </ImageView>

    <TextView
        android:id="@+id/txt_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/img_new"
        android:text="신규 맛집"
        android:textSize="17dp">
    </TextView>

    <TextView
        android:layout_marginLeft="1dp"
        android:id="@+id/delivery_time"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/img_new"
        app:layout_constraintRight_toRightOf="parent"
        android:text="21-31분"
        android:textSize="15dp">
    </TextView>

    <ImageView
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        android:id="@+id/stars"
        android:layout_width="17dp"
        android:layout_height="17dp"
        app:layout_constraintTop_toBottomOf="@id/txt_name"
        android:src="@drawable/ic_stars_preview_rev_1">
    </ImageView>

    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/txt_review_num"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_name"
        app:layout_constraintLeft_toRightOf="@id/stars"
        android:text="4.8"
        android:textSize="13dp">
    </TextView>

    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/txt_review_count"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_name"
        app:layout_constraintLeft_toRightOf="@id/txt_review_num"
        android:text="(233)"
        android:textSize="13dp">
    </TextView>

    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/and"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_name"
        app:layout_constraintLeft_toRightOf="@id/txt_review_count"
        android:text="·"
        android:textSize="13dp">
    </TextView>

    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/txt_distance"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_name"
        app:layout_constraintLeft_toRightOf="@id/and"
        android:text="0.4Km"
        android:textSize="13dp">
    </TextView>

    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/and2"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_name"
        app:layout_constraintLeft_toRightOf="@id/txt_distance"
        android:text="·"
        android:textSize="13dp">
    </TextView>

    <TextView
        android:id="@+id/txt_delivery_status"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_name"
        app:layout_constraintLeft_toRightOf="@id/and2"
        android:text="무료배달"
        android:textSize="13dp">
    </TextView>



</androidx.constraintlayout.widget.ConstraintLayout>